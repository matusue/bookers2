<%= form_with model:book do |f| %>

  <%= f.label :Title %>
  <div class="form-title row">
    <%= f.text_field :title, class: "col-md-12" %>
  </div>

  <%= f.label :Opinion %>
  <div class="form-body row">
    <%= f.text_area :body, class: "col-md-12" %>
  </div>

  <div class="actions row">
    <%= f.submit class: "btn btn-primary col-md-12" %>
  </div>
<% end %>