<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>

              <li class="nav-item">
                <i class="fas fa-home"></i>
                <%= link_to "Home", user_path(current_user.id),class:'nav-link text-dark' %></a>
              </li>
              <li class="nav-item">
                <i class="fas fa-users"></i>
                <%= link_to "Users", "/users",class:'nav-link text-dark' %></a>
              </li>
              <li class="nav-item">
                <i class="fas fa-book-open"></i>
                <%= link_to "Books", "/books",class:'nav-link text-dark' %></a>
              </li>
              <li class="nav-item">
                <i class="fas fa-sign-out-alt"></i>
                <%= link_to "logout", destroy_user_session_path,class:'nav-link text-dark',method: :delete %>
              </li>

            <% else %>
              <li class="nav-item">
                  <i class="fas fa-home"></i>
                  <%= link_to"Home",root_path,  class:'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <i class="fas fa-link"></i>
                <%= link_to"About",home_about_path,class:'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <i class="fas fa-user-plus"></i>
                <%= link_to"sign up", "/users/sign_up",class:'nav-link text-dark' %>
              </li>
              <li class="nav-item">
                <i class="fas fa-sign-in-alt"></i>
                <%= link_to"login", "/users/sign_in",  class:'nav-link text-dark' %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div class= "body">

      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
    </div>

  <%= yield %>


    <footer>
      <div class='container'>
        <div class='row'>
          <div class='col-xs-3 col-xs-offset-9'>
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
